
{% if (page.footer_one or page.footer_two or page.footer_three or page.footer_four or page.footer_bottom) %}
    <footer class="footer">
        <div class="footer-regions container">
            <div class="row">
                <div class="col-lg-3 col-sm-4 col-xs-12">
                    {% if page.footer_one %}
                        {{ page.footer_one }}
                    {% endif %}
                </div>
                <div class="col-lg-3 col-sm-4 col-xs-12">
                    {% if page.footer_two %}                        
                        {{ page.footer_two }}
                    {% endif %}
                </div>
                <div class="col-lg-3 col-sm-4 col-xs-12">
                    {% if page.footer_three %}
                        {{ page.footer_three }}
                    {% endif %}
                </div>
                <div class="col-lg-3 col-sm-12 xs-full-width">
                    {% if page.footer_four %}
                        {{ page.footer_four }}
                    {% endif %}
                </div>
            </div>
        </div>
        {% if page.footer_bottom %}
            <div class="footer__bottom">
                <div class="container">
                    {{ page.footer_bottom }}
                </div>
            </div>
        {% endif %}                
    </footer>
{% endif %}
{% if page.modal %}
    {{ page.modal }}
{% endif %}