
{% if (page.footer_one or page.footer_two or page.footer_three or page.footer_four or page.footer_bottom) %}
    <footer class="footer">
        <div class="footer-regions container">
            <div class="row">

                <div class="col-md-3 col-sm-4 hidden-xs">
                    {% if page.footer_one %}
                        {{ page.footer_one }}
                    {% endif %}
                </div>


                <div class="col-md-2 col-sm-3 col-xs-12 hidden-xs">
                    {% if page.footer_two %}                        
                        {{ page.footer_two }}
                    {% endif %}
                  </div>


                <div class="col-md-4 col-sm-5 col-xs-12 hidden-xs">
                    {% if page.footer_three %}
                        {{ page.footer_three }}
                    {% endif %}
                </div>

                <div class="col-lg-3 col-sm-12 xs-full-width">
                    <div class="payment-systems">
                        <div class="payment-systems__content">
                            <img src="{{ base_path ~ directory }}/images/brands/pp_cc_mark_74x46.jpg" class="payment-system" alt="Paypal"/>
                            <img src="{{ base_path ~ directory }}/images/brands/mastercard.svg" class="payment-system" alt="Mastercard"/>
                            <img src="{{ base_path ~ directory }}/images/brands/visa_pos_fc.png" class="payment-system" alt="VISA"/>
                            <img src="{{ base_path ~ directory }}/images/brands/american-express-logo.gif" class="payment-system" alt="American Express"/>                            
                            <img src="{{ base_path ~ directory }}/images/brands/sucuri.png" class="payment-system" alt="Sucuri"/>
                        </div>
                    </div>
                    {% if page.footer_four %}
                        {{ page.footer_four }}
                    {% endif %}
                </div>
            </div>
        </div>
        {% if page.footer_bottom %}
            <div class="footer__bottom">
                <div class="container">
                    {{ page.footer_bottom }}
                </div>
            </div>
        {% endif %}                
    </footer>
{% endif %}
{% if page.modal %}
    {{ page.modal }}
{% endif %}